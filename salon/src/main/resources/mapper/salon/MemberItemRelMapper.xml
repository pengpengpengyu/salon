<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.salon.mapper.MemberItemRelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ruoyi.salon.domain.entity.MemberItemRel">
        <id column="member_item_rel_id" property="memberItemRelId" />
        <result column="member_id" property="memberId" />
        <result column="item_id" property="itemId" />
        <result column="times" property="times" />
        <result column="del_flag" property="delFlag" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="give_times" property="giveTimes" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        member_item_rel_id, member_id, item_id, times, give_times, del_flag, create_by, create_time, update_by, update_time
    </sql>

    <select id="selectVoListByMemberId" resultType="com.ruoyi.salon.domain.vo.MemberItemRelVo" parameterType="java.lang.Long">
        select t.member_item_rel_id,t.member_id ,t.times, t.give_times, t.item_id ,h.member_name ,i.item_name,
               i.price, i.discounted_price
        from t_member_item_rel t
        left join t_member h on t.member_id = h.member_id and h.del_flag = '0'
        left join t_item i on t.item_id  = i.item_id and i.del_flag = '0'
        where
            t.member_id = #{memberId}
          and t.del_flag = '0'
    </select>
</mapper>
